{
  "name": "lightning-blits",
  "publisher": "lightningjs",
  "displayName": "Lightning Blits",
  "description": "Template syntax highlighting and code completion for the Lightning Blits framework",
  "version": "0.4.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/lightning-js/blits-vscode-extension.git"
  },
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "Lightning",
    "LightningJS",
    "Lightning 3.0",
    "L3",
    "L3.0",
    "Blits",
    "Blitz"
  ],
  "icon": "./icon.png",
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "main": "./src/extension.js",
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.js --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch"
  },
  "contributes": {
    "grammars": [
      {
        "injectTo": [
          "source.js",
          "source.ts"
        ],
        "scopeName": "inline.custom-blits-html",
        "path": "./syntaxes/embedded-html.json"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+/",
        "mac": "cmd+/",
        "command": "blits-vscode.commentCommand",
        "when": "editorTextFocus && (editorLangId == 'javascript' || editorLangId == 'typescript')"
      }
    ],
    "configuration": {
      "title": "Blits Extension Settings",
      "properties": {
        "blits.format.indent_size": {
          "type": "number",
          "default": 2,
          "description": "Indentation size.",
          "minimum": 0,
          "maximum": 8
        },
        "blits.format.indent_char": {
          "type": "string",
          "default": " ",
          "description": "Indentation character."
        },
        "blits.format.indent_with_tabs": {
          "type": "boolean",
          "default": false,
          "description": "Indent with tabs, overrides indent size and char."
        },
        "blits.format.eol": {
          "type": "string",
          "default": "\\n",
          "description": "Character(s) to use as line terminators."
        },
        "blits.format.end_with_newline": {
          "type": "boolean",
          "default": false,
          "description": "End output with newline."
        },
        "blits.format.preserve_newlines": {
          "type": "boolean",
          "default": true,
          "description": "Preserve line-breaks."
        },
        "blits.format.max_preserve_newlines": {
          "type": "number",
          "default": 1,
          "description": "Number of line-breaks to be preserved in one chunk.",
          "minimum": 0
        },
        "blits.format.wrap_line_length": {
          "type": "number",
          "default": 120,
          "description": "Wrap lines that exceed N characters.",
          "minimum": 0
        },
        "blits.format.indent_empty_lines": {
          "type": "boolean",
          "default": false,
          "description": "Keep indentation on empty lines."
        }
      }
    }
  },
  "dependencies": {
    "@babel/parser": "^7.22.11",
    "@babel/traverse": "^7.23.2",
    "fs-extra": "^11.1.1",
    "js-beautify": "^1.14.11"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.81.0",
    "@vscode/test-electron": "^2.3.4",
    "esbuild": "^0.19.2",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "prettier": "^2.8.8",
    "typescript": "^5.1.6"
  }
}
