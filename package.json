{
  "name": "bolt-vscode",
  "displayName": "bolt-vscode",
  "description": "Visual Studio Code extension for Bolt",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript"
  ],
  "main": "./src/extension.js",
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "contributes": {
    "grammars": [
      {
        "injectTo": [
          "source.js"
        ],
        "scopeName": "inline.custom-bolt-html",
        "path": "./syntaxes/embedded-html.json"
      }
    ],
    "languages": [
      {
        "id": "javascript",
        "extensions": [
          ".js"
        ],
        "aliases": [
          "JavaScript",
          "javascript"
        ]
      }
    ]
  },
  "dependencies": {
    "@babel/parser": "^7.22.11",
    "@babel/traverse": "^7.22.17",
    "fs-extra": "^11.1.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.81.0",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "prettier": "^2.8.8",
    "typescript": "^5.1.6"
  }
}
