{
  "typescript.preferences.includePackageJsonAutoImports": "off",
  "typescript.validate.enable": true,
  "javascript.validate.enable": true,
  
  // Exclude fixture files from TypeScript/JavaScript validation in editor
  "typescript.exclude": [
    "**/test/fixtures/**/*"
  ],
  "javascript.exclude": [
    "**/test/fixtures/**/*"
  ],
  
  // Don't show errors for fixture files in problems panel
  "problems.showCurrentInStatus": true,
  
  // ESLint configuration
  "eslint.workingDirectories": [
    "."
  ],
  "eslint.format.enable": true,
  
  // File associations for .blits files
  "files.associations": {
    "*.blits": "javascript"
  },
  
  // Exclude fixture files from file watchers to improve performance
  "files.watcherExclude": {
    "**/test/fixtures/**": true,
    "**/test/out/**": true
  }
}