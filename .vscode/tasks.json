
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "esbuild: watch",
      "type": "shell",
      "command": "npm run esbuild-base -- --sourcemap --watch",
      "isBackground": true,
      "problemMatcher": {
        "base": "$tsc-watch",
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".+",
          "endsPattern": ".*"
        }
      }
    }
  ]
}
